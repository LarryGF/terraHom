{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true
    }
  ],
  "automergeSchedule":[
    "after 9am and before 1pm every weekday"
  ],
  "bumpVersion": "patch",
  "major": {
    "dependencyDashboardApproval": true
  },
  "dependencyDashboardOSVVulnerabilitySummary": "all"
}
